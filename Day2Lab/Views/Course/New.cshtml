@model Course
@{
    SelectList depts = new SelectList(ViewBag.Depts, "Id", "Name");
    ViewData["Title"] = "New";
}

<h1>New</h1>

<form asp-action="SaveNew" asp-controller="Course">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div>
        <label asp-for="Name">
        </label>
        <input asp-for="Name" class="form form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Degree">
        </label>
        <input asp-for="Degree" class="form form-control" />
        <span asp-validation-for="Degree" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="MinDegree">
        </label>
        <input asp-for="MinDegree" class="form form-control" />
        <span asp-validation-for="MinDegree" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Crs_Houres">
        </label>
        <input asp-for="Crs_Houres" class="form form-control" />
        <span asp-validation-for="Crs_Houres" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="DeptId">
        </label>
        <select class="form form-control" asp-for="DeptId" asp-items="depts">
            <option value="0">-- Select Department --</option>
         </select>
        <span asp-validation-for="DeptId" class="text-danger"></span>
    </div>

    <input type="submit" value="Save" class="btn btn-success" />

</form>


<a asp-action="Index" asp-controller="Course" >Back To Courses List</a>

<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>