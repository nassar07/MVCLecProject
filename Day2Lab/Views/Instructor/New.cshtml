@using Day2Lab.ViewModel
@model InstructorWithDepListAndCourseListViewModel
@{
    ViewData["Title"] = "New";
}

<h1>New</h1>


<form method="post" action="/Instructor/SaveNew">

    <div>
        <label>
            Name
        </label>
        <input class="form form-control" type="text" name="Name" value="@Model.Name" />
    </div>
    <div>
        <label>
            Image
        </label>
        <input class="form form-control" type="text" name="Image" value="@Model.Image" />
    </div>
    <div>
        <label>
            Salary
        </label>
        <input class="form form-control" type="text" name="Salary" value="@Model.Salary" />
    </div>
    <div>
        <label>
            Address
        </label>
        <input class="form form-control" type="text" name="Address" value="@Model.Address" />
    </div>
    <div>
        <label>
            Department
        </label>
        <select name="DeptId">
            @foreach (var dep in Model.departmentsList)
            {
                if (dep.Id == Model.DeptId)
                {
                    <option value = "@dep.Id"  selected > @dep.Name </option >
                }
                else
                {
                    <option value = "@dep.Id" > @dep.Name </option >
                }
            }
        </select>
    </div>
    <div>
        <label>
            Course
        </label>
        <select name="CourseId">
            @foreach (var crs in Model.CoursesList)
            {
                if (crs.Id == Model.CourseId)
                {
                    <option value = "@crs.Id" selected > @crs.Name </option >
                }
                else
                {
                    <option value = "@crs.Id" > @crs.Name </option >
                }
            }
        </select>
    </div>


    <input type="submit" value="Save" class="btn btn-success" />

</form>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

